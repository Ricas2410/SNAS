<%- include('../../partials/header', {title: 'View Assessment'}) %>
<%- include('../../partials/sidebar', { user: user, role: user.role }) %>


<style>
    .container {
        margin-left: 250px; /* Same width as the sidebar */
        padding: 20px;
    }

    /* Mobile responsiveness */
    @media (max-width: 768px) {
        .container {
            margin-left: 0; /* Remove margin for small screens */
        }
    }
    
</style>

<div class="dashboard-container container">
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h1 class="text-center mb-4">Assessment for <%= assessment.Student.name %></h1>

            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Assessment Details</h5>
                    <p><strong>Week:</strong> <%= assessment.weekNumber %></p>
                    <p><strong>Date:</strong> <%= assessment.date.toLocaleDateString() %></p>
                    <p><strong>Status:</strong> <%= assessment.status %></p>
                </div>
            </div>

            <h4 class="mt-4">Subject Assessments</h4>
            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th style="width: 30%">Subject</th>
                        <th style="width: 70%">Notes</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (assessment.SubjectAssessments && assessment.SubjectAssessments.length > 0) { %>
                        <% assessment.SubjectAssessments.forEach(function(subjectAssessment) { %>
                            <tr>
                                <td><%= subjectAssessment.Subject ? subjectAssessment.Subject.name : 'Unknown Subject' %></td>
                                <td><%= subjectAssessment.comment %></td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="2" class="text-center">No subject assessments found.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>

            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="summary"><strong>Assessment Summary</strong></label>
                        <textarea class="form-control" id="summary" rows="5" readonly><%= assessment.summary %></textarea>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="headteacherComment"><strong>Headteacher's Comment</strong></label>
                        <textarea class="form-control" id="headteacherComment" rows="5" readonly><%= assessment.headteacherComment || 'No comment yet.' %></textarea>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="/teacher/pending-assessments" class="btn btn-secondary">Back to Pending Assessments</a>
                <a href="/teacher/assessment/edit/<%= assessment.id %>" class="btn btn-primary ml-2">Edit Assessment</a>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer') %>
</div>