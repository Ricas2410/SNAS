<%- include('../../partials/header', {title: 'New Assessment'}) %>
<%- include('../../partials/sidebar', { user: user, role: user.role }) %>


<style>
    .container {
        margin-left: 250px; /* Same width as the sidebar */
        padding: 20px;
    }

    /* Mobile responsiveness */
    @media (max-width: 768px) {
        .container {
            margin-left: 0; /* Remove margin for small screens */
        }
    }
    
</style>

<div class="dashboard-container container">
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center mb-4">New Assessment for <%= student.name %></h1>

            <form action="/teacher/assessment/create" method="POST">
                <input type="hidden" name="studentId" value="<%= student.id %>">
                
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="date">Date</label>
                        <input type="date" class="form-control" id="date" name="date" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="weekNumber">Week Number</label>
                        <input type="number" class="form-control" id="weekNumber" name="weekNumber" min="1" max="52" required>
                    </div>
                </div>
                
                <h4 class="mt-4">Subject Assessments</h4>
                <table class="table table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th style="width: 30%">Subject</th>
                            <th style="width: 70%">Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (subjects && subjects.length > 0) { %>
                            <% subjects.forEach(function(subject) { %>
                                <tr>
                                    <td><%= subject.name %></td>
                                    <td>
                                        <textarea class="form-control" id="subject_<%= subject.id %>" name="subjects[<%= subject.id %>]" rows="3"></textarea>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="2" class="text-center">No subjects found for this class.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
                
                <div class="form-group">
                    <label for="summary">Assessment Summary</label>
                    <textarea class="form-control" id="summary" name="summary" rows="5"></textarea>
                </div>
                
                <div class="form-group">
                    <label for="headteacherComment">Headteacher's Comment</label>
                    <textarea class="form-control" id="headteacherComment" name="headteacherComment" rows="5" readonly></textarea>
                </div>
                
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">Submit Assessment</button>
                    <a href="/teacher/student/<%= student.id %>" class="btn btn-secondary ml-2">Back to Student</a>
                    <a href="/teacher/assessment/past/<%= student.id %>" class="btn btn-info ml-2">View Past Assessments</a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../../partials/footer') %>
</div>